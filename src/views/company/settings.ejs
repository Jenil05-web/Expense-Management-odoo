<%- include('../layouts/header') %>

<div class="container mt-4">
    <div class="page-header">
        <h1 class="page-title">Company Settings</h1>
    </div>

    <div class="card">
        <div class="card-header">
            <!-- Navigation Tabs -->
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="/company/settings">
                        <i class="fas fa-building me-2"></i>General Information
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/company/currency">
                        <i class="fas fa-coins me-2"></i>Currency
                    </a>
                </li>
            </ul>
        </div>
        <form action="/company/settings" method="POST">
            <div class="card-body">
                <p class="text-muted mb-4">Update your company's profile information. This information may be used on reports and official documents.</p>
                
                <!-- Company Details -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="name" class="form-label">Company Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= company.name %>" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email" class="form-label">Contact Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= company.email %>">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="phone" name="phone" value="<%= company.phone %>">
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-group">
                            <label for="website" class="form-label">Website</label>
                            <input type="url" class="form-control" id="website" name="website" value="<%= company.website %>" placeholder="https://www.example.com">
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <!-- Address Details -->
                <h5 class="mb-3">Company Address</h5>
                <div class="row">
                    <div class="col-12">
                         <div class="form-group">
                            <label for="address" class="form-label">Address Line</label>
                            <input type="text" class="form-control" id="address" name="address" value="<%= company.address ? company.address.line1 : '' %>" placeholder="1234 Main St">
                        </div>
                    </div>
                    <div class="col-md-6">
                         <div class="form-group">
                            <label for="city" class="form-label">City</label>
                            <input type="text" class="form-control" id="city" name="city" value="<%= company.address ? company.address.city : '' %>">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="state" class="form-label">State / Province</label>
                            <input type="text" class="form-control" id="state" name="state" value="<%= company.address ? company.address.state : '' %>">
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-group">
                            <label for="postalCode" class="form-label">ZIP / Postal Code</label>
                            <input type="text" class="form-control" id="postalCode" name="postalCode" value="<%= company.address ? company.address.postalCode : '' %>">
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i> Update Company Info
                </button>
            </div>
        </form>
    </div>
</div>

<%- include('../layouts/footer') %>
