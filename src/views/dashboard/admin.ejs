<%- include('../partials/header', { user: currentUser }) %>
<%- include('../partials/sidebar', { currentUser, currentPage }) %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1 class="display-4">Admin Dashboard</h1>
            <p class="lead">Welcome, <%= currentUser.firstName %>!</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Total Users</div>
                <div class="card-body">
                    <h5 class="card-title"><%= stats.totalUsers %></h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Active Users</div>
                <div class="card-body">
                    <h5 class="card-title"><%= stats.activeUsers %></h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Pending Expenses</div>
                <div class="card-body">
                    <h5 class="card-title"><%= stats.pendingExpenses %></h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Approved Expenses</div>
                <div class="card-body">
                    <h5 class="card-title"><%= stats.approvedExpenses %></h5>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header">Total Expense Amount</div>
                <div class="card-body">
                    <h5 class="card-title">$<%= stats.totalAmount %></h5>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header">Pending Expense Amount</div>
                <div class="card-body">
                    <h5 class="card-title">$<%= stats.pendingAmount %></h5>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <h2>Recent Expenses</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% recentExpenses.forEach(expense => { %>
                        <tr>
                            <td><%= expense.user.firstName %> <%= expense.user.lastName %></td>
                            <td><%= expense.category %></td>
                            <td><%= expense.description %></td>
                            <td>$<%= expense.amount %></td>
                            <td><%= expense.status %></td>
                            <td><%= expense.createdAt.toDateString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
