<%- include('../partials/header') %>
<%- include('../partials/sidebar', { currentPage: 'dashboard', currentUser }) %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Manager Dashboard</h1>
            <p class="lead">Welcome, <%= currentUser.firstName %>!</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Pending Your Approval</div>
                <div class="card-body">
                    <h5 class="card-title"><%= stats.pendingCount %></h5>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Team Expenses This Month</div>
                <div class="card-body">
                    <h5 class="card-title"><%= stats.teamExpenses %></h5>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <h2>Expenses Awaiting Your Approval</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Employee</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (pendingExpenses.length > 0) { %>
                        <% pendingExpenses.forEach(expense => { %>
                            <tr>
                                <td><%= expense.createdAt.toDateString() %></td>
                                <td><%= expense.user.firstName + ' ' + expense.user.lastName %></td>
                                <td><%= expense.category %></td>
                                <td><%= expense.amount %></td>
                                <td>
                                    <a href="/approvals/review/<%= expense._id %>" class="btn btn-sm btn-primary">Review</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">No pending expenses for approval.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
