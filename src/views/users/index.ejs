<%- include('../layouts/header') %>

<div class="container mt-4">
    <div class="page-header">
        <h1 class="page-title">User Management</h1>
        <% if (user.role === 'Admin') { %>
            <a href="/users/create" class="btn btn-primary">
                <i class="fas fa-user-plus me-2"></i> Add New User
            </a>
        <% } %>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">All Company Users</h3>
        </div>
        <div class="card-body">
            <div class="table-container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Department</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users && users.length > 0) { %>
                            <% users.forEach(u => { %>
                                <tr>
                                    <td><strong><%= u.firstName %> <%= u.lastName %></strong></td>
                                    <td><%= u.email %></td>
                                    <td>
                                        <% if (u.role === 'Admin') { %>
                                            <span class="badge badge-primary"><%= u.role %></span>
                                        <% } else if (u.role === 'Manager') { %>
                                            <span class="badge badge-info"><%= u.role %></span>
                                        <% } else { %>
                                            <span class="badge badge-secondary"><%= u.role %></span>
                                        <% } %>
                                    </td>
                                    <td><%= u.department || 'N/A' %></td>
                                    <td class="text-center">
                                        <% if (u.isActive) { %>
                                            <span class="badge badge-success">Active</span>
                                        <% } else { %>
                                            <span class="badge badge-danger">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td class="text-center">
                                        <div class="table-actions">
                                            <a href="/users/<%= u.id %>/profile" class="btn btn-sm btn-outline-primary btn-icon" title="View Profile">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <% if (user.role === 'Admin') { %>
                                                <a href="/users/<%= u.id %>/edit" class="btn btn-sm btn-outline-primary btn-icon" title="Edit User">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6">
                                    <div class="empty-state">
                                        <i class="fas fa-users-slash empty-state-icon"></i>
                                        <h5 class="empty-state-title">No Users Found</h5>
                                        <p class="empty-state-description">There are no users in your company yet. Add one to get started.</p>
                                        <% if (user.role === 'Admin') { %>
                                            <a href="/users/create" class="btn btn-primary">Add a New User</a>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>
