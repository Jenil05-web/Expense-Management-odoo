<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign Up - Expense Management System</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
  />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/components.css" />
</head>

<body class="auth-page">
  <div class="auth-container">
    <div class="auth-card signup-card">
      <div class="auth-left">
        <div class="auth-left-content">
          <div class="logo-section">
            <img src="/images/logo.png" alt="Logo" class="auth-logo" />
            <h1>Join Expense Management System</h1>
          </div>
          <p class="tagline">
            Simplify your companyâ€™s expense tracking and approval process.
          </p>

          <ul class="feature-list">
            <li>
              <i class="fas fa-check-circle"></i>
              <span>Auto-create company profile</span>
            </li>
            <li>
              <i class="fas fa-user-shield"></i>
              <span>Admin dashboard access</span>
            </li>
            <li>
              <i class="fas fa-users"></i>
              <span>Manage employees easily</span>
            </li>
            <li>
              <i class="fas fa-chart-line"></i>
              <span>Real-time expense analytics</span>
            </li>
          </ul>
        </div>
      </div>

      <div class="auth-right">
        <div class="auth-form-container">
          <div class="auth-header">
            <h2>Create Your Account</h2>
            <p>Enter your details to get started</p>
          </div>

          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <i class="fas fa-exclamation-circle me-2"></i>
              <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>

          <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <i class="fas fa-check-circle me-2"></i>
              <%= success %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>

          <form id="signup" action="/auth/signup" method="POST">
            
            <div class="form-group">
              <label for="name" class="form-label">
                <i class="fas fa-user me-1"></i> Full Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                class="form-control"
                placeholder="Enter your name"
                required
              />
            </div>

            <div class="form-group">
              <label for="email" class="form-label">
                <i class="fas fa-envelope me-1"></i> Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter your email"
                required
              />
            </div>

            <div class="form-group">
              <label for="password" class="form-label">
                <i class="fas fa-lock me-1"></i> Password
              </label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Enter your password"
                required
              />
            </div>

            <div class="form-group">
              <label for="confirmPassword" class="form-label">
                <i class="fas fa-lock me-1"></i> Confirm Password
              </label>
              <input
                type="password"
                id="confirmPassword"
                name="confirmPassword"
                class="form-control"
                placeholder="Re-enter your password"
                required
              />
            </div>

            <!-- Country Dropdown with Currency -->
            <div class="form-group">
              <label for="country" class="form-label">
                <i class="fas fa-globe me-1"></i> Country
              </label>
              <select id="country" name="country" class="form-select" required>
                <option value="" disabled selected>Select your country</option>
                <option value="India" data-currency="INR">India</option>
                <option value="United States" data-currency="USD">United States</option>
                <option value="United Kingdom" data-currency="GBP">United Kingdom</option>
                <option value="Canada" data-currency="CAD">Canada</option>
                <option value="Australia" data-currency="AUD">Australia</option>
                <option value="Eurozone" data-currency="EUR">Eurozone</option>
                <option value="Japan" data-currency="JPY">Japan</option>
                <option value="Singapore" data-currency="SGD">Singapore</option>
                <!-- Add more countries as needed -->
              </select>
              <input type="hidden" name="currency" id="currency" value="" />
            </div>

            <button type="submit" class="btn btn-primary btn-auth mt-3 w-100">
              <i class="fas fa-user-plus me-2"></i> Create Account
            </button>
          </form>

          <div class="auth-footer mt-3">
            <p>Already have an account? <a href="/auth/login">Sign In</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  ></script>

  <script>
    // Password confirmation
    document.getElementById("signup").addEventListener("submit", function (e) {
      const password = document.getElementById("password").value.trim();
      const confirmPassword = document.getElementById("confirmPassword").value.trim();

      if (password !== confirmPassword) {
        e.preventDefault();
        alert("Passwords do not match!");
        return false;
      }
    });

    // Set currency automatically based on country
    const countrySelect = document.getElementById("country");
    const currencyInput = document.getElementById("currency");

    countrySelect.addEventListener("change", function () {
      const selectedOption = this.options[this.selectedIndex];
      currencyInput.value = selectedOption.getAttribute("data-currency");
    });
  </script>
</body>
</html>
